{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "midex://contracts/workflow/WorkflowOutput.schema.json",
  "title": "WorkflowOutput",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "summary": { "type": "string" },
    "workflow": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "reason": { "type": "string" }
      },
      "required": ["name"]
    },
    "steps": { "type": "array" },
    "artifacts": { "type": "array" },
    "decisions": { "type": "array" },
    "findings": { "type": "array" },
    "suggested_findings": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "scope": { "type": "string", "enum": ["global", "project", "system"] },
          "project_id": { "type": ["integer", "null"] },
          "category": { "type": "string", "enum": ["security", "architecture", "performance", "constraint", "pattern"] },
          "severity": { "type": "string", "enum": ["info", "low", "medium", "high", "critical"] },
          "title": { "type": "string" },
          "content": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["scope", "category", "severity", "title", "content"],
        "allOf": [
          {
            "if": { "properties": { "scope": { "const": "project" } } },
            "then": { "required": ["project_id"] }
          }
        ]
      }
    },
    "next_steps": { "type": "array", "items": { "type": "string" } },
    "blockers": { "type": "array", "items": { "type": "string" } },
    "references": { "type": "array", "items": { "type": "string" } },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
  },
  "required": ["summary", "workflow", "references", "confidence"]
}

